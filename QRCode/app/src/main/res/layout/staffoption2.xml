<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7CD8D5">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_users_bt_id"
        android:text="@string/view_users_text"
        android:background="@color/myGreen"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/user_out_bt_id"
        android:layout_alignStart="@+id/user_out_bt_id"
        android:layout_alignRight="@+id/user_out_bt_id"
        android:layout_alignEnd="@+id/user_out_bt_id" />

    <Button
        android:id="@+id/user_out_bt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/myRed"
        android:layout_marginTop="30dp"
        android:text="@string/view_out_users"
        android:layout_below="@+id/view_users_bt_id"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/all_user_bt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_out_bt_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/view_all_users" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/register_b_id"
        android:text="@string/register_bt_text"
        android:layout_below="@+id/all_user_bt_id"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/register_user_bt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/register_user_text"
        android:layout_below="@+id/register_b_id"
        android:layout_alignRight="@+id/register_b_id"
        android:layout_alignEnd="@+id/register_b_id"
        android:layout_alignLeft="@+id/register_b_id"
        android:layout_alignStart="@+id/register_b_id" />


</RelativeLayout>